<div id="container">
  <header>

    <a href="#" id="info">&nbsp;&nbsp;i&nbsp;&nbsp;</a>
    <a href="#" id="showtimes" >SHOWTIMES</a>

    <%= form_for :theaters, url: movie_theaters_path(@id), :html => {:class => 'zip_form'} do |f| %>

      <%= f.text_field :zip, :placeholder => "SHOWTIMES" %><br>
      <%= f.hidden_field :movie_id, :value => "id#{@recommendation.movie.id}" %>

    <% end %>

  </header>

  <div id="main" role="main">

    <div id="info_box">
      
      <p>
        <b>Critics Consensus</b>:
        <%= @recommendation.movie.rt_datum.critics_consensus %> 
      </p>

      <div id="trailer">
        <iframe src="http://www.youtube.com/embed/<%= @recommendation.movie.videoid %>" frameborder="0" allowfullscreen></iframe>
      </div>

    </div>

    <div id="recommendation">
      
      <h3>you should see ...</h3>
      <h1>
        <%= @recommendation.movie.title %><%= link_to image_tag("right_arrow.png", :class => "arrow"), movie_path( @recommendation.ranking + 1 ), :id => "next2" %>
      </h1>
      <div id="rating"><%= @recommendation.movie.score %></div>

    </div>

    <%= link_to raw("&nbsp;&nbsp;NEXT â†’"), movie_path( @recommendation.ranking + 1 ), :id => "next" %>

  </div>
</div> <!--! end of #container -->
